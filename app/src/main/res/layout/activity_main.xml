<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridout"
        android:layout_width="376dp"
        android:layout_height="398dp"
        android:background="@drawable/ticboard"
        android:onClick="playagain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/position2"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="14dp"
            android:alpha="1"
            android:onClick="clicktwo"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/position1"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginTop="14dp"
            android:alpha="1"
            android:onClick="clickone"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/position4"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginTop="23dp"
            android:alpha="1"
            android:onClick="clickfour"

            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/position5"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="23dp"
            android:alpha="1"
            android:onClick="clickfive"

            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/position6"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="21dp"
            android:alpha="1"
            android:onClick="clicksix"

            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/position9"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="17dp"
            android:alpha="1"
            android:onClick="clicknine"

            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/position8"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="19dp"
            android:alpha="1"
            android:onClick="clickeight"

            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/position7"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginTop="17dp"
            android:alpha="1"
            android:onClick="clickseven"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/position3"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:alpha="1"
            android:onClick="clickthree"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/winnerMessage"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="67dp"
        android:layout_marginTop="18dp"
        android:background="#00DC1A1A"
        android:onClick="playagain"
        android:text="Play Again!"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridout" />
</androidx.constraintlayout.widget.ConstraintLayout>